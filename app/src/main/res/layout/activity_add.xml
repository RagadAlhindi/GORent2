<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addbackground"
    tools:context=".AddActivity">


    <EditText
        android:id="@+id/searchtext"
        android:layout_width="343dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:autofillHints=""
        android:background="@drawable/custom_search"
        android:drawableStart="@drawable/customsearchicon"
        android:drawablePadding="12sp"
        android:ems="10"
        android:hint="What you are looking for?"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textCursorDrawable="@null"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/addtitle"
        android:layout_width="340dp"
        android:layout_height="39dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/opensauceonebold"
        android:lineSpacingExtra="-1sp"
        android:text="Add New Vehicle"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />


    <TextView
        android:id="@+id/VehicleModel"
        android:layout_width="270dp"
        android:layout_height="29dp"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/opensauceonesemibold"
        android:text="Vehicle Model:"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/model"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/custom_inputadd"
        android:hint="ex.Chevrolet malibu"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/VehicleModel" />

    <TextView
        android:id="@+id/plateNo"
        android:layout_width="270dp"
        android:layout_height="29dp"
        android:layout_marginTop="236dp"
        android:fontFamily="@font/opensauceonesemibold"
        android:text="Plate Number:"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/plate"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/custom_inputadd"
        android:hint=" Enter plate No."
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plateNo" />


    <TextView
        android:id="@+id/Pickup"
        android:layout_width="270dp"
        android:layout_height="29dp"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/opensauceonesemibold"
        android:text="Pick-up:"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/pickupinput"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/custom_inputadd"
        android:hint=" Enter the Location"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Pickup" />

    <TextView
        android:id="@+id/typeinput"
        android:layout_width="270dp"
        android:layout_height="29dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/opensauceonesemibold"
        android:text="Type:"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/pickuploc"
        android:layout_width="284dp"
        android:layout_height="40dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/custom_inputadd"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/typeinput" />

    <TextView
        android:id="@+id/Rent"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Rent Amount:"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="171dp" />

    <EditText
        android:id="@+id/Amount"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/custom_inputadd"
        android:ems="10"
        android:hint="Enter rent amount"
        android:inputType="number"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="270dp"
        android:layout_height="29dp"
        android:layout_marginTop="516dp"
        android:fontFamily="@font/opensauceonesemibold"
        android:text="Description:"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userDescription"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_input"
        android:hint=" Enter the description"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/Description"
        tools:layout_editor_absoluteX="64dp" />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="31dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="#e7d7ef"
        android:text="ADD"
        android:textColor="#66347F"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/listicon"
       />

    <Button
        android:id="@+id/BSelectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#e7d7ef"
        android:text="SELECT IMAGE"
        android:textColor="#66347F"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="611dp" />

    <ImageView
        android:id="@+id/IVPreviewImage"
        android:layout_width="188dp"
        android:layout_height="117dp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="494dp" />



    <ImageView
        android:id="@+id/menuphoto"
        android:layout_width="397dp"
        android:layout_height="283dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/menusvg" />

    <TextView
        android:id="@+id/homeicontext"
        android:layout_width="26dp"
        android:layout_height="13dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/opensauceoneregular"
        android:lineSpacingExtra="4sp"
        android:text="HOME"
        android:textColor="#463D82"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homeicon"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/basketicontext"
        android:layout_width="34dp"
        android:layout_height="12dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="86dp"
        android:fontFamily="@font/opensauceoneregular"
        android:lineSpacingExtra="4sp"
        android:text="RENTED"
        android:textColor="#463D82"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/basketicon"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/logouticontext"
        android:layout_width="41dp"
        android:layout_height="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/opensauceoneregular"
        android:lineSpacingExtra="4sp"
        android:text="LOG-OUT"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logouticon"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/listicontext"
        android:layout_width="32dp"
        android:layout_height="13dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/opensauceoneregular"
        android:lineSpacingExtra="4sp"
        android:text="OFFERS"
        android:textColor="#463D82"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listicon"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/homeicon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/homeicon" />

    <ImageView
        android:id="@+id/listicon"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="18dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeicon"
        app:srcCompat="@drawable/listicon" />

    <ImageView
        android:id="@+id/logouticon"
        android:layout_width="31dp"
        android:layout_height="34dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="21dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logouticon" />

    <ImageView
        android:id="@+id/basketicon"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="23dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logouticon"
        app:srcCompat="@drawable/basketicon" />


</androidx.constraintlayout.widget.ConstraintLayout>